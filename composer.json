{
    "name": "scriptotek/colligator-backend",
    "description": "The Colligator backend.",
    "authors": [
        {
            "name": "Dan Michael O. Heggø",
            "email": "d.m.heggo@ub.uio.no"
        },
        {
            "name": "Kyrre T. Låberg",
            "email": "k.t.laberg@ub.uio.no"
        },
        {
            "name": "Stian Lågstad",
            "email": "stian.lagstad@ub.uio.no"
        }
    ],
    "keywords": ["library data", "api"],
    "license": "MIT",
    "type": "project",
    "require": {
        "php": ">=7.0.0",
        "ext-imagick": "*",
        "laravel/framework": "5.3.*",
        "scriptotek/simplemarcparser": "^0.8.1",
        "danmichaelo/quitesimplexmlelement": "~0.4",
        "shift31/laravel-elasticsearch": "~1.0",
        "barryvdh/laravel-cors": "~0.8.2",
        "barryvdh/laravel-ide-helper": "~2.0@dev",
        "doctrine/dbal": "~2.5",
        "intervention/image": "~2.3",
        "league/flysystem-aws-s3-v3": "~1.0",
        "maknz/slack": "~1.7",
        "fabpot/goutte": "^3.1@dev",
        "easyrdf/easyrdf": "dev-master",
        "ml/json-ld": "~1.0",
        "scriptotek/sru-client": "dev-master",
        "scriptotek/marc": "dev-master",
        "scriptotek/google-books": "^0.2.0",
        "arcanedev/log-viewer": "^4.1",
        "caseyamcl/phpoaipmh": "^2.5"
    },
    "require-dev": {
        "fzaninotto/faker": "~1.4",
        "mockery/mockery": "0.9.*",
        "phpunit/phpunit": "~4.0",
        "phpspec/phpspec": "~2.1",
        "symfony/dom-crawler": "~3.1",
        "symfony/css-selector": "~3.1"
    },
    "autoload": {
        "classmap": [
            "database"
        ],
        "psr-4": {
            "Colligator\\": "app/"
        }
    },
    "autoload-dev": {
        "classmap": [
            "tests/TestCase.php",
            "tests/_helpers"
        ]
    },
    "scripts": {
        "post-install-cmd": [
            "php artisan clear-compiled",
            "php artisan optimize"
        ],
        "post-update-cmd": [
            "php artisan clear-compiled",
            "php artisan optimize"
        ],
        "post-root-package-install": [
            "php -r \"copy('.env.example', '.env');\""
        ],
        "post-create-project-cmd": [
            "php -r \"copy('.env.example', '.env');\"",
            "php artisan key:generate"
        ]
    },
    "config": {
        "preferred-install": "dist"
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
